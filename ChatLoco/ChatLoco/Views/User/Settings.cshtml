

<div id="settings-form-container">
    <h2 class="h2 white">User Settings</h2>

    <div class="white">
        <form class="form-horizontal" id="settings-form" method="post">
            <div class="form-group">
                <label class="col-sm-2 control-label">Username</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="name" name="name" placeholder="current username" value="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="email" name="email" placeholder="current email" value="" required>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Default Handle</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="defaultHandle" name="defaultHandle" placeholder="current default handle" value="" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <input type="hidden" value="@Request.Url.GetLeftPart(UriPartial.Authority)" />
                    <input id="submit" name="submit" type="submit" value="Update" class="btn btn-primary">
                </div>
            </div>
        </form>
    </div>
</div>

